<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="Showroom.CarShowroom.controller.Notification"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:f="sap.ui.layout.form">
<SplitApp id="SplitAppDemo" initialDetail="detail" initialMaster="master" orientationChange="onOrientationChange">
		<detailPages>
			<Page id="detail" title="Detail 1" showHeader = "false" class="sapUiStdPage">
				<content>
					<f:SimpleForm editable="true" columnsM="2" columnsL="2" columnsXL="2" class="sapUiLargeMarginBegin">
						<f:content>
							<core:Title text="Car Detail"/>
							<Label text=""/>
							<Image src="{myModel>/Panel/image}" height="30%" width="40%"/>
							<!--<Input placeholder="Name" editable="{jmodel>/editable}" value="{myModel>/Panel/Name}" />-->
							<Label text="Car Model"/>
							<Text text="{myModel>/Panel/CarName}" id="model"/>
							<Label text="Delivary Date"/>
							<Text text="{myModel>/Panel/Date}" />
						<Label text="Color"/>
							<Text text="{myModel>/Panel/color}" />
						
							
						</f:content>
					</f:SimpleForm>	
				</content>
					<footer>
					<Bar class="sapUiStdFooter">
						<contentRight>
							<!--<Button xmlns="sap.m" type="Accept" text="BOOK" id="addemp5" icon="sap-icon://add" tooltip="Book the item"/>-->
							<!--<Button xmlns="sap.m" class="sapUiSmallMarginBottom" press="" text=""-->
							<!-- />-->
							<Button class="sapUiSmallMarginBottom" type="Accept" text="Accept" press="Accept" visible="false" id="Accept"
								icon="sap-icon://accept" />
								<Button class="sapUiSmallMarginBottom" type="Reject" text="Reject" press="Reject" visible="false" id="Reject"
								icon="sap-icon://decline" />	
								
						</contentRight>
					</Bar>
				</footer>
			</Page>
		</detailPages>
		<masterPages>
			<Page id="master" title="Master 1" showHeader = "false" icon="sap-icon://action" class="sapUiStdPage">
				<content>
					<SearchField liveChange="onCustomerSearch" ></SearchField>
						<List id="idCustomerdetails" items="{path:'myModel>/notification',sorter:{path : 'Name'}}" itemPress="item"  delete="onDelete" updateFinished="Updated"
							includeItemInSelection="true" press="" >
							<items>
								<ObjectListItem title="{myModel>CarName}"  type="Active"  selected="true" >
									<attributes>
										<ObjectAttribute text="Delivery Date:{myModel>Date}" />
										<ObjectAttribute text="Status:{myModel>av}"  />
									</attributes>
									<firstStatus>
										<ObjectStatus icon="sap-icon://chevron-phase-2" state = "{path:'myModel>av', formatter:'.formatter.status'}">
											
										</ObjectStatus>
									</firstStatus>
								</ObjectListItem>
							</items>
						</List>
				</content>
					<footer>
					<Bar class="sapUiStdFooter">
						<!--<contentRight>-->
							<!--<Button xmlns="sap.m" type="Accept" text="BOOK" id="addemp5" icon="sap-icon://add" tooltip="Book the item"/>-->
							<!--<Button xmlns="sap.m" class="sapUiSmallMarginBottom" press="" text=""-->
							<!-- />-->
						<!--	<Button class="sapUiSmallMarginBottom" type="Ghost" text="GRAPH" press="graph" tooltip="Graphical representation of Yearly Transaction"-->
						<!--		icon="sap-icon://bar-chart">-->
						<!--		<customData>-->
						<!--			<core:CustomData key="multi" value="true"/>-->
						<!--		</customData>-->
						<!--	</Button>-->
						<!--</contentRight>-->
					</Bar>
				</footer>
			</Page>
		</masterPages>
		
	</SplitApp>
</mvc:View>